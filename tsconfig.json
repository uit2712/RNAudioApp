{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@common/*": ["common/*"],
            "@constants/*": ["constants/*"],
            "@context-api/*": ["context-api/*"],
            "@functions/*": ["functions/*"],
            "@helpers/*": ["helpers/*"],
            "@hooks/*": ["hooks/*"],
            "@interfaces/*": ["interfaces/*"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}